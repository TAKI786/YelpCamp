

<%- include ('../partials/header'); -%>

<div class="container">
 <div class="row">
   <h1 style="text-align:center;"> Add New Comment -<u><em> <%= campground.name %></u></em></h1>
	  
	  <div style="width: 40%; margin: 45px auto;">

		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">

			<div class="form-group">  <input class="form-control" type="text" placeholder="Text" name="text" required>  </div>
				
			<% campground.comments.author = currentUser.username %>

			<div class="form-group">  <button class="btn btn-lg btn-block btn-primary">  Submit!  </button> </div>
		</form>
	
	<a href = "/campgrounds" > Go Back </a>
  
   </div>
 </div>
</div>

