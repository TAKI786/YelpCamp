
<%- include ('../partials/header'); -%>


<div class="container">
	<header class="jumbotron" style="border-radius: 20px 20px;">

		<div class="container">

			<h1>Welcome To The Campground !! </h1>
			<p> View our hand-picked Campground from all over the world </p>

				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
		</div>
	</header>
	
  <div class ="row text-center" style="display: flex; flex-wrap: wrap;">

	<% for(var i=0;i<campgrounds.length;i++){ %>

		<div class="col-md-3 col-sm-6">
	   		<div style="margin-bottom: 30px;">
	   			
	   			<img src = "<%= campgrounds[i].image %>" style="border-radius:15px ; width: 90%; height: 175px;">
	   			<div class="caption">
	   				<h4> <%= campgrounds[i].name %> </h4>
	   			</div>
	   			<a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More info</a>
	   	
	   		</div>
		</div>	

	<% } %>

</div>

<%- include ('../partials/footer'); -%>